<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Manager"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Input for Contact Name -->
    <EditText
        android:id="@+id/contactNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Name"
        android:inputType="textPersonName"/>

    <!-- Input for Contact Number -->
    <EditText
        android:id="@+id/contactNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:inputType="phone"
        android:layout_marginTop="8dp"/>

    <!-- Buttons to Add/Search/Delete Contacts -->
    <Button
        android:id="@+id/addContactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/searchContactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Contact"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/deleteLastContactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Last Contact"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <!-- Display Recent Contacts -->
    <TextView
        android:id="@+id/recentContactsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Viewed Contacts (Stack)"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/stackContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="8dp"
        android:background="#E1E1E1"
        android:layout_marginTop="8dp"/>
</LinearLayout>
